<%-include ('files/top.ejs') %>
   
   <div class="container table-responsive my-5">
    <table class="table table-secondary align-middle" style="color: black;background-color: rgb(248, 234, 246);">
  <thead>
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Stock</th>
      <th scope="col">Prix</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% for (let produit of myproduits) {%>
    <tr>
      <th><img src="/upload/<%= produit.image%>"  width="100" height="100" ></th>
      <td><%= produit.title %></td>
      <td><%= produit.description %></td>
      <td><%= produit.stock %>pcs</td>
      <td><%= produit.prix %>TND</td>
      <td class="btn-group">
          <a class="btn btn-outline-danger" href="/myproduits/delete/<%= produit._id%>" >Delete</a>
          <a class="btn btn-outline-info" href="/myproduits/update/<%= produit._id%>">Update</a> 
      </td>
    </tr>

<% } %>
  </tbody>
</table>
   </div>


<%-include ('files/bottom.ejs') %>